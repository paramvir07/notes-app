generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String  @id @default(uuid())
  firstName  String
  lastName   String?
  username   String  @unique
  email      String  @unique
  profileUrl String
  role Role @default(USER)
  notes      Note[]
}

model Note {
  id      String @id @default(uuid())
  title   String
  Content String
  favourite Boolean @default(false)

  user    User   @relation(fields: [userId], references: [id])
  userId  String
}

enum Role {
  ADMIN
  USER
}
